SELECT
r.id_reserva,
h.nome_hospede as hospede,
q.numero_quarto,
r.data_check_in,
r.data_check_out
FROM
reservas r
JOIN
hospedes h ON r.id_hospede = h.id_hospede
JOIN
quartos q ON r.id_quarto = q.id_quarto
WHERE
r.data_check_out IS NOT NULL

SELECT
r.id_reserva,
h.nome_hospede as hospede,
q.numero_quarto,
r.data_check_in,
r.data_check_out
FROM
reservas r
JOIN
hospedes h ON r.id_hospede = h.id_hospede
JOIN
quartos q ON r.id_quarto = q.id_quarto

SELECT
r.id_reserva,
h.nome_hospede as hospede,
q.numero_quarto,
r.data_check_in,
r.data_check_out
FROM
reservas r
JOIN
hospedes h ON r.id_hospede = h.id_hospede
JOIN
quartos q ON r.id_quarto = q.id_quarto
WHERE
q.